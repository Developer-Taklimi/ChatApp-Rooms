<body style="background-color: #e6e9ff;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px;">
  <div style="display: flex;
              flex-direction: column;
              align-items: flex-start;
              padding: 100px;
              background-color: #7386ff;">
    <h1>Register</h1>
    <form action="/register" method="POST">
      <div style="padding: 6px 0px;display: flex;
                  flex-direction: row;
                  justify-content: space-between;">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div style="padding: 6px 0px;display: flex;
                  flex-direction: row;
                  justify-content: space-between;">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div style="padding: 6px 0px;display: flex;
                  flex-direction: row;
                  justify-content: space-between;">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button style="background-color: #2e83c0; padding: 2px 15px; width: 100%;" type="submit">Register</button>
    </form>
    <a style="color: black; padding: 6px 0px;font-weight: 600;
              font-size: 25px;" href="/login">Login</a>
  </div>

</body>